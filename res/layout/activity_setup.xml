<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Scroll_setup"
    android:background="#444444"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="3dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".SetupActivity" >

        <TextView
            android:id="@+id/TV_Setup_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF9900"
            android:text="How many Players?" 
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/B_Setup_DecreasePlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF9900"
                android:text="-" />

            <TextView
                android:id="@+id/TV_Setup_AmountOfPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF9900"
                android:gravity="center"
                android:text="5"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:width="150dp" />

            <Button
                android:id="@+id/B_Setup_IncreasePlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF9900"
                android:text="+" />
        </LinearLayout>

        <Button
            android:id="@+id/B_Setup_AutoAssignRoles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF9900"
            android:layout_marginBottom="20dp"
            android:text="Auto Assign" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/TV_Setup_Mafia"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="#FF9900"
                android:text="0 Mafias: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp"
                android:width="75dp" />

            <SeekBar
                android:id="@+id/SB_Setup_Mafias"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/TV_Setup_Healers"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="#FF9900"
                android:text="0 Healers:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp"
                android:width="75dp" />

            <SeekBar
                android:id="@+id/SB_Setup_Healers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/TV_Setup_Detective"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="#FF9900"
                android:text="0 Detectives: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp"
                android:width="75dp" />

            <SeekBar
                android:id="@+id/SB_Setup_Detective"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/TV_Setup_Terrorist"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="#FF9900"
                android:text="0 Terrorists: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp"
                android:width="75dp" />

            <SeekBar
                android:id="@+id/SB_Setup_Terrorist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/TV_Setup_Villagers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF9900"
                android:text="Villagers: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp"
                android:width="90dp" />

            <TextView
                android:id="@+id/TV_Setup_VillagersCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF9900"
                android:gravity="center_horizontal"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <Button
            android:id="@+id/B_Setup_Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF9900"
            android:padding="10dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="20dp"
            android:text="Play"
            android:width="150dp" />

    </LinearLayout>

</ScrollView>
